#syntax=docker/dockerfile:1
ARG CONTAINER_REGISTRY=docker.io
FROM $CONTAINER_REGISTRY/ubuntu:jammy-20231004 AS base

FROM base as download
SHELL ["/bin/bash", "-o", "pipefail", "-c"]
RUN <<EOF
  apt-get update
  apt-get install -y --no-install-recommends \
    ca-certificates \
    curl
  mkdir -p /tmp/node_exporter
  dpkgArch="$(dpkg --print-architecture)"
  case "${dpkgArch##*-}" in \
    amd64) \
      NODE_EXPORTER_URL='https://github.com/prometheus/node_exporter/releases/download/v1.5.0/node_exporter-1.5.0.linux-amd64.tar.gz' \
      NODE_EXPORTER_SHA256='af999fd31ab54ed3a34b9f0b10c28e9acee9ef5ac5a5d5edfdde85437db7acbb' \
      ;; \
    arm64) \
      NODE_EXPORTER_URL='https://github.com/prometheus/node_exporter/releases/download/v1.5.0/node_exporter-1.5.0.linux-arm64.tar.gz' \
      NODE_EXPORTER_SHA256='e031a539af9a619c06774788b54c23fccc2a852d41437315725a086ccdb0ed16' \
      ;; \
    armhf) \
      NODE_EXPORTER_URL='https://github.com/prometheus/node_exporter/releases/download/v1.5.0/node_exporter-1.5.0.linux-armv7.tar.gz' \
      NODE_EXPORTER_SHA256='27d8853a3f2d131f97f3817761bd0714582482c97cafa2f27689fc7e9f30d9cc' \
      ;; \
    *) echo "unsupported architecture"; exit 1 ;; \
  esac
  curl -fsSL -o /tmp/node_exporter.tar.gz ${NODE_EXPORTER_URL}
  echo "${NODE_EXPORTER_SHA256} /tmp/node_exporter.tar.gz" | sha256sum -c -
  tar xvf /tmp/node_exporter.tar.gz -C /tmp/node_exporter --strip-components 1
EOF

FROM base

RUN <<EOF
  apt-get update
  DEBIAN_FRONTEND=noninteractive apt-get install -y --no-install-recommends \
    ca-certificates
  rm -rf /var/lib/apt/lists/*
EOF

COPY --chmod=755 --from=download /tmp/node_exporter/node_exporter /usr/local/bin/node_exporter

EXPOSE 9100
USER nobody
ENTRYPOINT [ "/usr/local/bin/node_exporter" ]
